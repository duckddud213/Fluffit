pipeline {
    agent any
    
    environment {
        JASYPT_KEY = credentials('JASYPT_KEY')
        JKS_PWD = credentials('JKS_PWD')
        JKS_ALIAS = credentials('JKS_ALIAS')
    }

    stages {
        stage('Gradle build') {
            steps {
                dir('backend/FluffitConfig') {
                    sh 'chmod +x ./gradlew'
                    sh './gradlew clean build'
                }
            }
        }

        stage('Docker image build') {
            steps {
                dir('backend/FluffitConfig') {
                    sh "docker stop fluffitconfig  || true && docker rm fluffitconfig || true"
                    sh 'docker rmi fluffitconfig || true'
                    sh 'docker build -t fluffitconfig .'
                }
            }
        }

        stage('Docker container run') {
            steps {
                dir('backend/FluffitConfig') {
                    sh 'docker run -d -e JASYPT_KEY=${JASYPT_KEY} -e JKS_PWD=${JKS_PWD} -e JKS_ALIAS=${JKS_ALIAS} -p 8888:8080 --network testnetwork --name fluffitconfig fluffitconfig'
                }
            }
        }

        stage('Cleanup dangling images') {
            steps {
                sh 'docker image prune -f'
                sh 'docker rmi $(docker images -f "dangling=true" -q)'
            }
        }
    }
}


