pipeline {
    agent any
    
    environment {
        JASYPT_KEY = credentials('JASYPT_KEY')
        JKS_PWD = credentials('JKS_PWD')
        JKS_ALIAS = credentials('JKS_ALIAS')
    }

    stages {
        stage('Gradle build') {
            steps {
                dir('backend/FluffitConfig') {
                    sh 'chmod +x ./gradlew'
                    sh './gradlew clean build'
                }
            }
        }

        stage('Docker image build') {
            steps {
                dir('backend/FluffitConfig') {
                    sh "docker stop flconf  || true && docker rm flconf || true"
                    sh 'docker rmi flconf || true'
                    sh 'docker build -t flconf .'
                }
            }
        }

        stage('Docker container run') {
            steps {
                dir('backend/FluffitConfig') {
                    sh 'docker run -d -e JASYPT_KEY=${JASYPT_KEY} -e JKS_PWD=${JKS_PWD} -e JKS_ALIAS=${JKS_ALIAS} -p 18888:8080 --network testnetwork --name flconf flconf'
                }
            }
        }
    }
}


